{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./build/",
      "removeComments": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "alwaysStrict": true
    },
    "exclude": [
      "node_modules"
    ]
  }
  